{

  "manifest_version": 2,
  "name": "InstaShare",
  "version": "1.0",

  "description": "Displays a QR Code for the active website.",
  "homepage_url": "https://github.com/rkv338/InstaShare",

  "browser_action": {
      "default_icon": "icons/bext.png",      
      "default_title": "InstaShare",
      "default_popup": "popups/qr.html"
  },

  "permissions": [
    "tabs",
    "activeTab"
  ],

  "icons": {
    "48": "icons/bext.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.com/*"],
      "js": ["instashare.js"]
    }
  ]



}